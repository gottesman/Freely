{
  "$schema": "https://schema.tauri.app/config/2",
  "version": "0.10.0",
  "build": {
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "npm run fetch:ytdlp && npm run fetch:bass && npm run dev",
    "beforeBuildCommand": "npm run fetch:ytdlp && npm run fetch:bass && npm run build && npm run build:server",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "icon": [
      "icons/icon.ico",
      "icons/icon-192.png"
    ],
    "windows": {
      "allowDowngrades": true,
      "webviewInstallMode": {
        "silent": true,
        "type": "downloadBootstrapper"
      }
    },
    "targets": [
      "nsis"
    ],
    "resources": [
      "server-dist",
      "bin/*",
      "../node_modules/utp-native"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "Freely Player",
        "width": 1200,
        "height": 800,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "decorations": false,
        "shadow": false,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "maximizable": true,
        "closable": true,
        "devtools": true,
        "center": true,
        "contentProtected": false,
        "backgroundThrottling": "disabled"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "*/**"
        ]
      },
      "capabilities": [
        {
          "identifier": "com.freely.player",
          "windows": [
            "*"
          ],
          "permissions": [
            "core:window:default",
            "core:window:allow-maximize",
            "core:window:allow-unmaximize",
            "core:window:allow-minimize",
            "core:window:allow-close",
            "core:event:default",
            "core:event:allow-listen",
            "core:path:default"
          ]
        }
      ],
      "dangerousDisableAssetCspModification": false,
      "freezePrototype": false
    }
  },
  "productName": "Freely Player",
  "identifier": "com.freely.player"
}
